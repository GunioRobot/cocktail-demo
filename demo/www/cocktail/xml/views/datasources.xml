<?xml version="1.0" encoding="utf-8"?>
<view>
	
	<!-- ################################### LAYOUT ################################### -->
	
	<layout>
		
		<!-- ========================= Datasources/index ========================= -->
		
		<action name="index">
			<div id="body">
				<txt id="title">{title}</txt>
				<txt id="text">{text}</txt>
				<txt id="inline" style="ds"><![CDATA[{inline}]]></txt>
				<txt id="http" style="ds"><![CDATA[{http}<br />>>> {http-data}]]></txt>
				<txt id="xml" style="ds"><![CDATA[{xml}<br />>>> {xml-data}]]></txt>
				<txt id="amf" style="ds"><![CDATA[{amf}<br />>>> {amf-data}]]></txt>
				<txt id="amf" style="ds">{obs}</txt>
			</div>
		</action>
		
	</layout>
	
	
	
	<!-- ################################### STYLES ################################### -->
	
	<styles>
		
		<!-- ========================= Datasources/index ========================= -->
		
		<div id="body" y="90" padding="25" />
			<txt id="title" font="BauerBlackCond" font_size="50" />
			<txt id="text" snap="0 1" margin="0 10" font="AGCondBold" font_size="30" />
			<txt id="ds" snap="0 1" margin="0 20" width="740" font="AGCondBold" font_size="22" />
	</styles>
</view>