<?xml version="1.0" encoding="utf-8"?>
<view>
	
	<!-- ################################### LAYOUT ################################### -->
	
	<layout>
		
		<!-- ========================= Media/index ========================= -->
		
		<action name="index">
			<div id="body">
				<txt id="title">{title}</txt>
				
				<div id="files">
					<div id="col-left">
						<txt id="text-img">{text-img}</txt>
						<img id="picture" src="saturn.jpg" />
					</div>
					
					<div id="col-right">
						<txt id="text-swf">{text-swf}</txt>
						<div id="menu">
							<loop times="9" iterator="frame">
								<btn id="frame-#frame#" style="menu-btn">
									<txt id="label" style="menu-label">{frame-#frame#}</txt>
								</btn>
							</loop>
						</div>
						<div id="swf">
							<swf id="timeline" src="eclipse.swf" />
						</div>
					</div>
				</div>
			</div>
		</action>
		
	</layout>
	
	
	
	<!-- ################################### STYLES ################################### -->
	
	<styles>
		
		<!-- ========================= Media/index ========================= -->
		
		<div id="body" y="90" padding="25" />
			<txt id="title" font_size="50" font="BauerBlackCond" />
			
			<div id="files" snap="0 1" margin="0 10"  />
			
			<txt id="text-img" snap="0 1" font_size="30" font="AGCondBold" />
			<img id="picture" snap="0 1" />
			
			<div id="col-right" margin="30 0" />
			
			<txt id="text-swf" margin_left="10" font_size="30" font="AGCondBold" />
			<div id="menu" snap="0 1" />
				<btn id="menu-btn"
					snap="0 1"
					margin_bottom="4"
					bg="true"
					bg_width="85"
					bg_color="0x0099cc"
					bg_over_color="0x9a005c"
					bg_alpha="1"
				/>
				<txt id="menu-label"
					color="0xFFFFFF"
					align="center"
					font="AGCondBold" 
					font_size="12"
					drop_shadow_distance="1"
					drop_shadow_angle="45"
					drop_shadow_color="0x000000"
					drop_shadow_alpha="0.75"
					drop_shadow_blurX="1"
					drop_shadow_blurY="1"
				/>
			<div id="swf" snap="1 0" margin_left="10" bg="true" bg_color="0x000000" bg_width="210" bg_height="210" />
	</styles>
</view>