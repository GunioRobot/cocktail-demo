package cocktail.lib.cocktail.fxml.view {	import cocktail.lib.cocktail.fxml.Fxml;			/**	 * Fxml base class for layout DOM.	 * @author nybras | nybras@codeine.it	 */	public class FxmlLayout extends Fxml 	{		/* ---------------------------------------------------------------------			INITIALIZING		--------------------------------------------------------------------- */				/**		 * Initializes the module.		 */		function FxmlLayout ()		{			super( "layouts" );		}								/* ---------------------------------------------------------------------			READING / PREPROCESSING		--------------------------------------------------------------------- */				/**		 * Reads the raw/xml action DOM, preprocess its contents and return it.		 * @param name	Action name to handle.		 * @return	The preprocessed action content.		 */		public function action ( name : String ) : XML		{			var structure : XML;						structure = _structure..action.( @name == name )[ 0 ];						if ( ! ( action is XML ) )				structure = <action name={name} />;						structure = _preprocessor.globals ( structure, path );			structure = _preprocessor.params( structure, path );			structure = _preprocessor.loops ( structure, path );			structure = _preprocessor.sweeps ( structure, path );			structure = _preprocessor.binds ( structure, path );						return structure;		}	}}